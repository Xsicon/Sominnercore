@using MudBlazor

@code {
    [Parameter] public EventCallback<string> OnThemeChanged { get; set; }
    private bool _mobileMenuOpen = false;
    
    private void ToggleMobileMenu()
    {
        _mobileMenuOpen = !_mobileMenuOpen;
        StateHasChanged(); // Force UI update
    }
}

<MudAppBar Elevation="0" Class="header-bar">
    <div class="header-content">
        <!-- Logo -->
        <MudText Typo="Typo.h6" Class="logo">
            Sominnercore
        </MudText>

        <!-- Center Navigation Links (desktop only) -->
        <MudSpacer />
        <MudHidden Breakpoint="Breakpoint.Md">
            <MudNavMenu Class="nav-links">
                <MudNavLink Href="#home">Home</MudNavLink>
                <MudNavLink Href="#services">Services</MudNavLink>
                <MudNavLink Href="#about">About</MudNavLink>
                <MudNavLink Href="#portfolio">Portfolio</MudNavLink>
                <MudNavLink Href="#contact">Contact</MudNavLink>
            </MudNavMenu>
        </MudHidden>

        <!-- Right Side -->
        <MudSpacer />
        
        <!-- Theme Switcher Dropdown -->
        <div class="theme-switcher-container">
            <button class="theme-switch-btn" onclick="toggleThemeDropdown()">
                <!-- Sun Icon (for light theme) -->
                <svg id="sunIcon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
                    <path d="M12 7c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5-2.24-5-5-5zM2 13h2c.55 0 1-.45 1-1s-.45-1-1-1H2c-.55 0-1 .45-1 1s.45 1 1 1zm18 0h2c.55 0 1-.45 1-1s-.45-1-1-1h-2c-.55 0-1 .45-1 1s.45 1 1 1zM11 2v2c0 .55.45 1 1 1s1-.45 1-1V2c0-.55-.45-1-1-1s-1 .45-1 1zm0 18v2c0 .55.45 1 1 1s1-.45 1-1v-2c0-.55-.45-1-1-1s-1 .45-1 1zM5.99 4.58c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0s.39-1.03 0-1.41L5.99 4.58zm12.37 12.37c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0 .39-.39.39-1.03 0-1.41l-1.06-1.06zm1.06-10.96c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06zM7.05 18.36c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06z"/>
                </svg>
                <!-- Moon Icon (for dark theme) -->
                <svg id="moonIcon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 3c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9c0-.46-.04-.92-.1-1.36-.98 1.37-2.58 2.26-4.4 2.26-2.98 0-5.4-2.42-5.4-5.4 0-1.81.89-3.42 2.26-4.4-.44-.06-.9-.1-1.36-.1z"/>
                </svg>
            </button>
            <div class="theme-dropdown" id="themeDropdown">
                <div class="theme-option" onclick="setTheme('light')">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 7c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5-2.24-5-5-5zM2 13h2c.55 0 1-.45 1-1s-.45-1-1-1H2c-.55 0-1 .45-1 1s.45 1 1 1zm18 0h2c.55 0 1-.45 1-1s-.45-1-1-1h-2c-.55 0-1 .45-1 1s.45 1 1 1zM11 2v2c0 .55.45 1 1 1s1-.45 1-1V2c0-.55-.45-1-1-1s-1 .45-1 1zm0 18v2c0 .55.45 1 1 1s1-.45 1-1v-2c0-.55-.45-1-1-1s-1 .45-1 1zM5.99 4.58c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0s.39-1.03 0-1.41L5.99 4.58zm12.37 12.37c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0 .39-.39.39-1.03 0-1.41l-1.06-1.06zm1.06-10.96c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06zM7.05 18.36c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06z"/>
                    </svg>
                    Light
                </div>
                <div class="theme-option" onclick="setTheme('dark')">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 3c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9c0-.46-.04-.92-.1-1.36-.98 1.37-2.58 2.26-4.4 2.26-2.98 0-5.4-2.42-5.4-5.4 0-1.81.89-3.42 2.26-4.4-.44-.06-.9-.1-1.36-.1z"/>
                    </svg>
                    Dark
                </div>
                <div class="theme-option" onclick="setTheme('system')">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"/>
                    </svg>
                    System
                </div>
            </div>
        </div>
        

        <MudButton Class="admin-button">Admin</MudButton>
        <MudButton Class="get-started-btn">Get Started</MudButton>

        <!-- Mobile Hamburger -->
        <div class="mobile-hamburger-container">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="ToggleMobileMenu" Class="mobile-hamburger" />
        </div>
    </div>
</MudAppBar>

<!-- Mobile Navigation Menu (Outside AppBar) -->
<div class="mobile-menu-wrapper">
    @if (_mobileMenuOpen)
    {
        <div class="mobile-nav-collapse">
            <div class="mobile-nav-menu">
                <MudNavLink Href="#home" Class="mobile-nav-link" OnClick="ToggleMobileMenu">Home</MudNavLink>
                <MudNavLink Href="#services" Class="mobile-nav-link" OnClick="ToggleMobileMenu">Services</MudNavLink>
                <MudNavLink Href="#about" Class="mobile-nav-link" OnClick="ToggleMobileMenu">About</MudNavLink>
                <MudNavLink Href="#portfolio" Class="mobile-nav-link" OnClick="ToggleMobileMenu">Portfolio</MudNavLink>
                <MudNavLink Href="#contact" Class="mobile-nav-link" OnClick="ToggleMobileMenu">Contact</MudNavLink>
            </div>
        </div>
    }
</div>
