@using MudBlazor

<div class="hero-container" id="home">
    <!-- Decorative Blobs for Light Mode -->
    <div class="hero-blob hero-blob-orange"></div>
    <div class="hero-blob hero-blob-green"></div>
    
    <!-- Left Section - Text Content -->
    <div class="hero-content">
        <div class="hero-left-content">
            <!-- Trusted Badge -->
            <div class="trusted-badge">
                <div class="badge-icon"></div>
                <span>Trusted by 500+ Companies</span>
            </div>

            <div class="hero-text-content">
                <!-- Main Heading -->
                <h1 class="hero-title">
                    <span class="title-main">Transforming Ideas Into Digital</span>
                    <span class="title-gradient">Excellence</span>
                </h1>

                <!-- Description -->
                <p class="hero-description">
                    We provide cutting-edge technology solutions that drive innovation and growth for businesses of all sizes.
                </p>

                <!-- Call-to-Action Buttons -->
                <div class="hero-buttons">
                    <MudButton Class="btn-primary" Variant="Variant.Filled" Size="Size.Medium">
                        Start Your Project
                        <MudIcon Icon="@Icons.Material.Filled.ArrowForward" />
                    </MudButton>
                    <MudButton Class="btn-secondary" Variant="Variant.Outlined" Size="Size.Medium">
                        <MudIcon Icon="@Icons.Material.Filled.PlayArrow" />
                        Watch Demo
                    </MudButton>
                </div>
            </div>

            <!-- Statistics -->
            <div class="hero-stats">
                <div class="stat-item">
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Projects Delivered</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">98%</div>
                    <div class="stat-label">Client Satisfaction</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Support Available</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Section - Image Content -->
    <div class="hero-image">
        <!-- Project Completed Badge -->
        <div class="project-badge">
            <div class="badge-icon"></div>
            <span>Project Completed</span>
        </div>

        <!-- Hero Image -->
        <div class="hero-image-container">
            <img src="/images/hero-image.png" alt="Modern desk setup with technology" class="hero-img" />
        </div>
    </div>
</div>
