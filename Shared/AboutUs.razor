@using MudBlazor

<div class="about-us-container" id="about">
    <!-- Header Section -->
    <div class="about-us-header">
        <div class="about-us-label">About Us</div>
        <h2 class="about-us-title">Empowering Businesses Through</h2>
    </div>

    <!-- Main About Section -->
    <div class="about-main-section">
        <div class="about-content">
            <!-- Left Content -->
            <div class="about-left-content">
                <div class="about-text-content">
                    <p class="about-description">
                        At Sominnercore, we're passionate about transforming businesses through innovative technology solutions. 
                        Our team of expert developers, designers, and strategists work together to create digital experiences 
                        that drive growth and success.
                    </p>
                    
                    <p class="about-description">
                        Founded with a vision to bridge the gap between complex technology and business needs, we've grown 
                        into a trusted partner for companies ranging from startups to enterprise organizations. Our commitment 
                        to excellence and innovation has helped hundreds of businesses achieve their digital transformation goals.
                    </p>
                </div>

                <!-- Why Choose Section -->
                <div class="why-choose-section">
                    <h3 class="why-choose-title">Why Choose Sominnercore?</h3>
                    <ul class="why-choose-list">
                        <li class="why-choose-item">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="check-icon" />
                            <span>Expert team with proven track record</span>
                        </li>
                        <li class="why-choose-item">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="check-icon" />
                            <span>Cutting-edge technology solutions</span>
                        </li>
                        <li class="why-choose-item">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="check-icon" />
                            <span>Agile development methodology</span>
                        </li>
                        <li class="why-choose-item">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="check-icon" />
                            <span>Comprehensive post-launch support</span>
                        </li>
                        <li class="why-choose-item">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="check-icon" />
                            <span>Competitive pricing and transparent billing</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Right Content - Image -->
            <div class="about-right-content">
                <div class="about-image-container">
                    <img src="/images/about-us.png" alt="Sominnercore team collaborating" class="about-image" />
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="about-stats-section">
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon">
                    <MudIcon Icon="@Icons.Material.Filled.People" />
                </div>
                <div class="stat-content">
                    <h4 class="stat-title">Happy Clients</h4>
                    <p class="stat-subtitle">Trusted by businesses worldwide</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" />
                </div>
                <div class="stat-content">
                    <h4 class="stat-title">Projects Completed</h4>
                    <p class="stat-subtitle">Successfully delivered solutions</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" />
                </div>
                <div class="stat-content">
                    <h4 class="stat-title">Years Experience</h4>
                    <p class="stat-subtitle">In technology innovation</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <MudIcon Icon="@Icons.Material.Filled.SupportAgent" />
                </div>
                <div class="stat-content">
                    <h4 class="stat-title">Support Available</h4>
                    <p class="stat-subtitle">Always here when you need us</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Values Section -->
    <div class="core-values-section">
        <div class="core-values-container">
            <h2 class="core-values-title">Our Core Values</h2>
            
            <div class="values-grid">
                <div class="value-card">
                    <h3 class="value-title">Innovation First</h3>
                    <p class="value-description">
                        We stay ahead of technology trends to deliver cutting-edge solutions that give you a competitive advantage.
                    </p>
                </div>
                
                <div class="value-card">
                    <h3 class="value-title">Client-Centric Approach</h3>
                    <p class="value-description">
                        Your success is our priority. We work closely with you to understand your needs and exceed expectations.
                    </p>
                </div>
                
                <div class="value-card">
                    <h3 class="value-title">Quality Assurance</h3>
                    <p class="value-description">
                        Every project undergoes rigorous testing and quality checks to ensure reliability and performance.
                    </p>
                </div>
                
                <div class="value-card">
                    <h3 class="value-title">Transparent Communication</h3>
                    <p class="value-description">
                        We believe in open communication and keep you informed throughout every phase of your project.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
