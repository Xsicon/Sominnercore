@using MudBlazor

<div class="services-container" id="services">
    <!-- Header Section -->
    <div class="services-header">
        <div class="services-label">Our Services</div>
        <h2 class="services-title">Complete Technology</h2>
        <p class="services-description">
            We offer a comprehensive suite of technology services to help your business thrive in the digital landscape.
        </p>
    </div>

    <!-- Services Grid -->
    <div class="services-grid">
        <!-- Web Development -->
        <div class="service-card">
            <div class="service-icon web-dev">
                <MudIcon Icon="@Icons.Material.Filled.Language" Size="Size.Large" />
            </div>
            <h3 class="service-title">Web Development</h3>
            <p class="service-description">
                Custom websites and web applications built with modern technologies for optimal performance.
            </p>
            <ul class="service-features">
                <li>Responsive Design</li>
                <li>SEO Optimized</li>
                <li>Fast Loading</li>
                <li>Secure</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- Mobile App Development -->
        <div class="service-card">
            <div class="service-icon mobile-dev">
                <MudIcon Icon="@Icons.Material.Filled.PhoneAndroid" Size="Size.Large" />
            </div>
            <h3 class="service-title">Mobile App Development</h3>
            <p class="service-description">
                Native and cross-platform mobile applications for iOS and Android with seamless user experience.
            </p>
            <ul class="service-features">
                <li>Native iOS/Android</li>
                <li>Cross-Platform</li>
                <li>App Store Ready</li>
                <li>Push Notifications</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- Cloud Solutions -->
        <div class="service-card">
            <div class="service-icon cloud-solutions">
                <MudIcon Icon="@Icons.Material.Filled.CloudDone" Size="Size.Large" />
            </div>
            <h3 class="service-title">Cloud Solutions</h3>
            <p class="service-description">
                Scalable cloud infrastructure and migration services to enhance your business operations.
            </p>
            <ul class="service-features">
                <li>AWS/Azure/GCP</li>
                <li>Auto Scaling</li>
                <li>Data Backup</li>
                <li>Cost Optimization</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- Digital Marketing -->
        <div class="service-card">
            <div class="service-icon digital-marketing">
                <MudIcon Icon="@Icons.Material.Filled.Campaign" Size="Size.Large" />
            </div>
            <h3 class="service-title">Digital Marketing</h3>
            <p class="service-description">
                Comprehensive digital marketing strategies to boost your online presence and drive growth.
            </p>
            <ul class="service-features">
                <li>SEO/SEM</li>
                <li>Social Media</li>
                <li>Content Marketing</li>
                <li>Analytics</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- E-commerce Solutions -->
        <div class="service-card">
            <div class="service-icon ecommerce">
                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Size="Size.Large" />
            </div>
            <h3 class="service-title">E-commerce Solutions</h3>
            <p class="service-description">
                Complete e-commerce platforms with payment integration and inventory management.
            </p>
            <ul class="service-features">
                <li>Payment Gateway</li>
                <li>Inventory System</li>
                <li>Order Management</li>
                <li>Multi-vendor</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- Custom Software Development -->
        <div class="service-card">
            <div class="service-icon custom-software">
                <MudIcon Icon="@Icons.Material.Filled.Code" Size="Size.Large" />
            </div>
            <h3 class="service-title">Custom Software Development</h3>
            <p class="service-description">
                Tailored software solutions designed to meet your specific business requirements.
            </p>
            <ul class="service-features">
                <li>Custom Logic</li>
                <li>API Integration</li>
                <li>Database Design</li>
                <li>Scalable Architecture</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- UI/UX Design -->
        <div class="service-card">
            <div class="service-icon ui-ux">
                <MudIcon Icon="@Icons.Material.Filled.TouchApp" Size="Size.Large" />
            </div>
            <h3 class="service-title">UI/UX Design</h3>
            <p class="service-description">
                User-centered design solutions that create engaging and intuitive digital experiences.
            </p>
            <ul class="service-features">
                <li>User Research</li>
                <li>Wireframing</li>
                <li>Prototyping</li>
                <li>Design Systems</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- DevOps & Infrastructure -->
        <div class="service-card">
            <div class="service-icon devops">
                <MudIcon Icon="@Icons.Material.Filled.Storage" Size="Size.Large" />
            </div>
            <h3 class="service-title">DevOps & Infrastructure</h3>
            <p class="service-description">
                Streamlined development operations and robust infrastructure management.
            </p>
            <ul class="service-features">
                <li>CI/CD Pipeline</li>
                <li>Container Management</li>
                <li>Monitoring</li>
                <li>Security</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- Data Analytics -->
        <div class="service-card">
            <div class="service-icon data-analytics">
                <MudIcon Icon="@Icons.Material.Filled.BarChart" Size="Size.Large" />
            </div>
            <h3 class="service-title">Data Analytics</h3>
            <p class="service-description">
                Advanced analytics and business intelligence solutions to drive data-driven decisions.
            </p>
            <ul class="service-features">
                <li>Data Visualization</li>
                <li>Predictive Analytics</li>
                <li>Real-time Dashboards</li>
                <li>Reporting</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>

        <!-- Cybersecurity -->
        <div class="service-card">
            <div class="service-icon cybersecurity">
                <MudIcon Icon="@Icons.Material.Filled.Security" Size="Size.Large" />
            </div>
            <h3 class="service-title">Cybersecurity</h3>
            <p class="service-description">
                Comprehensive security solutions to protect your digital assets and sensitive data.
            </p>
            <ul class="service-features">
                <li>Security Audit</li>
                <li>Threat Detection</li>
                <li>Data Encryption</li>
                <li>Compliance</li>
            </ul>
            <a href="#" class="learn-more-link">Learn More →</a>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="cta-section">
        <div class="cta-content">
            <h2 class="cta-title">Ready to Transform Your Business?</h2>
            <p class="cta-description">
                Let's discuss how our technology solutions can help you achieve your goals and drive growth.
            </p>
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       Class="cta-button"
                       Size="Size.Large">
                Schedule a Consultation
            </MudButton>
        </div>
    </div>
</div>

